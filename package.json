  "devDependencies": {
    "chai": "^4.1.2",
    "chromedriver": "2.38.3",
    "mocha": "^5.2.0",
    "selenium-webdriver": "^4.0.0-alpha.1",
    "mocha-junit-reporter": "^1.23.0",
    "mocha-multi-reporters": "^1.1.7",
    "mochawesome": "4.0.1"
  }
}

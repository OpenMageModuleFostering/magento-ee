<config>
    <sections>
        <payment>
            <groups>
                <wirecard_elastic_engine_paypal translate="label" module="elasticengine">
                    <label>Wirecard Elastic Engine PayPal</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <title>
                            <label>Title</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </title>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <api_url translate="label">
                            <label>Base URL</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </api_url>
                        <api_user translate="label">
                            <label>HTTP User</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </api_user>
                        <api_password translate="label">
                            <label>HTTP Password</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </api_password>
                        <api_test_button>
                            <frontend_type>button</frontend_type>
                            <frontend_model>elasticengine/adminhtml_system_config_credentialsButton</frontend_model>
                            <method>paypal</method>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </api_test_button>
                        <api_maid translate="label">
                            <label>MAID</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </api_maid>
                        <api_secret translate="label">
                            <label>Secret</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </api_secret>
                        <transaction_type translate="label">
                            <label>Payment action</label>
                            <frontend_type>select</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </transaction_type>
                    </fields>
                </wirecard_elastic_engine_paypal>
            </groups>
        </payment>
    </sections>
</config>
